<div class="book-info">
  <form method="POST" action="/book/<%= book.id %>/edit">
    <label for="title">Title:</label>
    <input
      type="text"
      name="title"
      minlength="1"
      maxlength="100"
      value="<%= book.title %>"
    />
    <label for="author">Author:</label>
    <input
      type="text"
      name="author"
      minlength="1"
      maxlength="100"
      value="<%= book.author.name %>"
    />
    <label for="genre">Genre:</label>
    <select name="genre">
      <% genres.forEach( (genre)=>{ %>
      <option value="<%= genre.name%>" <% if (genre.name===book.genre.name) {%>selected<%} %>><%= genre.name%></option>
      <% }) %>
    </select>

    <label for="quantity">Quantity:</label>
    <input
      type="number"
      name="quantity"
      min="0"
      max="10000"
      value="<%= book.quantity %>"
    />
    <button type="submit">UPDATE</button>
  </form>
</div>
