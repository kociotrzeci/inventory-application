<div class="author-info">
    <h4><%= author.name %></h4>
  <ul>
    <% for(const book of author.titles){ %>
        <li>
          <a href=<%=`/book/${book.id}`%>>
            <h5><%=book.title%></h5>
          </a>
        </li>
    <% } %>
  </ul>
  <a href=<%= `/authors/${author.id}/edit` %>><button>EDIT</button></a>
  <form action="/authors/<%= author.id %>/delete" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">DELETE</button>
</form>

</div>